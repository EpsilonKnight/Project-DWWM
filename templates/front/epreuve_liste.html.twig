{% extends 'base.html.twig' %}

{% block title %}Liste des epreuves
{% endblock %}

{% block body %}
<h1>Toutes les epreves effectuées</h1>


 <div class="row">
  {% for sport in sports %}
    <div class="col-12 col-md-6 col-lg-4">
      <a href="{{ path('classement_epreuve', {'id': sport.id}) }} ">
        <div class="cardEpreuve">
          <div class="card-image1 "><img src="{{asset('images/photos_epreuves/' ~ sport.imageName)}}" alt="Orange" /></div>
          <div class="card-body1">
          <p>Voir les résultats</p>
            <div class="card-title1">
              <h3>{{ sport.nom }}</h3>
            </div>
            </a>
          </div>
        </div>   
    </div>
    {% endfor %}
</div>


    
{% endblock %}