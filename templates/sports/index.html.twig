{% extends 'base.html.twig' %}

{% block title %}Sports index{% endblock %}

{% block body %}
    <h1>Sports index</h1>

    <a class="btn btn-primary col-md-12"href="{{ path('app_sports_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr>
                <td>{{ sport.id }}</td>
                <td>{{ sport.nom }}</td>
                <td>
                    <a href="{{ path('app_sports_show', {'id': sport.id}) }}">show</a>
                    <a href="{{ path('app_sports_edit', {'id': sport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sports_new') }}">Create new</a>
{% endblock %}
