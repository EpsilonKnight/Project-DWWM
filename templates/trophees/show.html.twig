{% extends 'base.html.twig' %}

{% block title %}Trophees
{% endblock %}

{% block body %}
	<h1>Trophees</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Epreuves</th>
				<td>{{ trophee.sports.nom }}</td>
			</tr>
			<tr>
				<th>Année</th>
				<td>{{ trophee.tournois.annee }}</td>
			</tr>
			<tr>
				<th>Gagnants</th>
                {% for participant in trophee.participants %}
						<td>{{ participant.nom }}</td>
					{% endfor %}
			</tr>
			
		</tbody>
	</table>

	<a href="{{ path('app_trophees_index') }}">Retour à la liste </a>

	<a href="{{ path('app_trophees_edit', {'id': trophee.id}) }}">Modifié</a>

	{{ include('trophees/_delete_form.html.twig') }}
{% endblock %}
